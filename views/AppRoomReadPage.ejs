<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><h4><%=resource.Heading%></h4></a>
      </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">

        <div class="tab-pane fade in active" id="home" role="tabpanel" aria-labelledby="home-tab">	
            <div style="width:40%">
            <form class="form-horizontal">
                <table class="table table-striped">
                    <tr class="heading-tr">
                        <th> <%=resource.Heading%></th>
                        <th></th>
                    </tr>
                    <tr>
                        <td><%=resource.MeetingRoom.label%></td>
                        <td><%=record.meeting_room%></td>						
                    </tr><tr>
                        <td><%=resource.Subject.label%></td>
                        <td><%=record.subject%></td>						
                    </tr><tr>
                        <td><%=resource.Participant.label%></td>
                        <td><%=record.participant%></td>						
                    </tr><tr>
                        <td><%=resource.StartDate.label%></td>
                        <td><%=dateFormat(record.start_date,'mmm-dd-yyyy HH:MM:ss')%></td>						
                    </tr><tr>
                        <td><%=resource.EndDate.label%></td>
                        <td><%=dateFormat(record.end_date,'mmm-dd-yyyy HH:MM:ss')%></td>						
                    </tr><tr>
                        <td><%=resource.Status.label%></td>
                        <td><%=record.status%></td>						
                    </tr><tr>
                        <td><%=resource.RefValue.label%></td>
                        <td><%=record.ref_value%></td>						
                    </tr>
                
                </table>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <button type="submit" class="btn btn-default"><a href="/writeAppRoom?meetingRoom=<%=record.meeting_room%>">Edit</a></button>
                <button type="submit" class="btn btn-default"><a href="/deleteAppRoom?meetingRoom=<%=record.meeting_room%>">Delete</a></button>
                <% } %>
                <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Back</button>
            </form>
            </div>
        </div>
        
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
