<!DOCTYPE html>
<html>
<head lang="en">
<% include head %>
</head>
<body>
<% include side-nav %>
<div id="main">
<% include header-nav %>
<div class="container-fluid">
<section id="main-content">

    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><h4><%=resource.Heading%></h4></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="accountMaster-tab" data-toggle="tab" href="#accountMaster" role="tab" aria-controls="accountMaster" aria-selected="true"><h4><%=resource.AccountMaster.Heading%></h4></a>
      </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">

        <div class="tab-pane fade in active" id="home" role="tabpanel" aria-labelledby="home-tab">	
            <div style="width:40%">
            <form class="form-horizontal">
                <table class="table table-striped">
                    <tr class="heading-tr">
                        <th> <%=resource.Heading%></th>
                        <th></th>
                    </tr>
                    <tr>
                        <td><%=resource.Id.label%></td>
                        <td><%=record.id%></td>						
                    </tr><tr>
                        <td><%=resource.Name.label%></td>
                        <td><%=record.name%></td>						
                    </tr><tr>
                        <td><%=resource.Parent.label%></td>
                        <td><%=record.parent%></td>						
                    </tr><tr>
                        <td><%=resource.Description.label%></td>
                        <td><%=record.description%></td>						
                    </tr><tr>
                        <td><%=resource.AccSectionId.label%></td>
                        <td><%=record.acc_section_id%></td>						
                    </tr>
                
                </table>
                <% if(session.user_acl=='ROLE_ADMIN') { %>
                <button type="submit" class="btn btn-default"><a href="/writeAccountGroup?id=<%=record.id%>">Edit</a></button>
                <button type="submit" class="btn btn-default"><a href="/deleteAccountGroup?id=<%=record.id%>">Delete</a></button>
                <% } %>
                <button type="button" class="btn btn-default" onclick="javascript:window.history.back()">Back</button>
            </form>
            </div>
        </div>
        
	<div class="tab-pane fade" id="accountMaster" role="tabpanel" aria-labelledby="accountMaster-tab">
            <div style="width:75%">
            <table class="table table-striped">
                <tr class="heading-tr">
                    <th><%=resource.AccountMaster.Id.header%></th>
                    <th><%=resource.AccountMaster.AccCode.header%></th>
                    <th><%=resource.AccountMaster.AccName.header%></th>
                    <th><%=resource.AccountMaster.AccDescription.header%></th>
                    <th><%=resource.AccountMaster.AccGroupId.header%></th>
                                        
                    <th>View</th>
                    <% if(session.user_acl=='ROLE_ADMIN') { %>
                    <th>Edit</th>
                    <th>Delete</th>
                    <% } %>
                </tr>
                <% for(let i in record.accountMaster){ let rec = record.accountMaster[i] %>
                <tr>
                    <td><a><%=rec.id%></a></td>
                    <td><a><%=rec.acc_code%></a></td>
                    <td><a><%=rec.acc_name%></a></td>
                    <td><a><%=rec.acc_description%></a></td>
                    <td><a><%=rec.acc_group_id%></a></td>
                    
                    <td><a href="/readAccountMaster?id=<%=rec.id%>"><span class="glyphicon glyphicon-open"></span></a></td>
                    <% if(session.user_acl=='ROLE_ADMIN') { %>
                    <td><a href="/writeAccountMaster?id=<%=rec.id%>"><span class="glyphicon glyphicon-edit"></span></a></td>
                    <td><a href="/deleteAccountMaster?id=<%=rec.id%>"><span class="glyphicon glyphicon-trash"></span></a></td>
                    <% } %>
                </tr>
                <% } %>
            </table>        
	    <button type="submit" class="btn btn-default"><a href="/newAccountMaster">Add</a></button>
	    <button type="submit" class="btn btn-default">Clear</button>
	    </div>	    
        </div>            
        
    </div>

</section>
</div>
</div>
<% include footer %>
</body>
</html>
